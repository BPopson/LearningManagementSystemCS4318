<p id="notice"><%= notice %></p>

<h1>Assignments</h1>

<table>
  <thead>
    <tr>
      <th>Course</th>
      <th>Semester</th>
      <th>Assignment Name</th>
      <th>Maximum Grade</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @assignments.each do |assignment| %>
      <tr>
        <td><%= assignment.course.course_name %></td>
        <td><%= assignment.course.semester %>
        <td><%= assignment.assignment_name %></td>
        <td><%= assignment.max_grade %></td>
        <% if current_administrator %>
          <td><%= link_to 'Show', assignment %></td>
          <td><%= link_to 'Edit', edit_assignment_path(assignment) %></td>
          <td><%= link_to 'Destroy', assignment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_administrator %>
  <%= link_to 'New Assignment', new_assignment_path %>
<% end %>
